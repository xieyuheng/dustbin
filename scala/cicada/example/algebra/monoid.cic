class monoid_t extends semigroup_t {
  let id: E
  fn left_id(x: E): eqv_t(mul(id, x), x)
  fn right_id(x: E): eqv_t(mul(x, id), x)

  let as_category: category_t = category_t(
    unit_t,
    (_: unit_t, _: unit_t): unit_t => E,
    (_: unit_t): E => id,
    mul,
    left_id,
    left_id,
    associative,
  )
}
